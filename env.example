# Jarvis EDU Extractor Configuration

# Application Settings
APP_NAME="Jarvis EDU Extractor"
APP_VERSION="0.1.0"
DEBUG=false
ENVIRONMENT=development

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_PREFIX=/api/v1

# Whisper Configuration
WHISPER__MODEL=base
WHISPER__DEVICE=cpu
WHISPER__LANGUAGE=auto
WHISPER__TEMPERATURE=0.0

# LLM Configuration
LLM__PROVIDER=ollama
LLM__MODEL=llama3
LLM__BASE_URL=http://localhost:11434
LLM__API_KEY=
LLM__TEMPERATURE=0.7
LLM__MAX_TOKENS=4000

# Database Configuration
DATABASE__QDRANT_HOST=localhost
DATABASE__QDRANT_PORT=6333
DATABASE__REDIS_URL=redis://localhost:6379
DATABASE__SQLITE_PATH=data/jarvis_edu.db

# Processing Configuration
PROCESSING__MAX_WORKERS=4
PROCESSING__CHUNK_SIZE=5000
PROCESSING__TARGET_LANGUAGE=pl
PROCESSING__TRANSLATION_PROVIDER=google
PROCESSING__DEEPL_API_KEY=

# Security Settings
SECURITY__MAX_FILE_SIZE_MB=500
SECURITY__SECRET_KEY=your-secret-key-change-in-production
SECURITY__API_RATE_LIMIT=100

# Monitoring
MONITORING__LOG_LEVEL=INFO
MONITORING__LOG_FORMAT=json
MONITORING__SENTRY_DSN=
MONITORING__ENABLE_METRICS=true

# Feature Flags
FEATURES__WEB_UI=true
FEATURES__WEBSOCKET_PROGRESS=true
FEATURES__BATCH_PROCESSING=true
FEATURES__AUTO_TRANSLATION=true
FEATURES__VECTOR_SEARCH=true

# Directory Paths
INPUT_DIR=./input
OUTPUT_DIR=./output
MODELS_DIR=./models
CACHE_DIR=./cache
LOGS_DIR=./logs

# Optional API Keys
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_TRANSLATE_API_KEY= 